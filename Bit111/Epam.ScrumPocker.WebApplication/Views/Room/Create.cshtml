@{
    ViewBag.Title = "Adding User Story";
}

@section JavaScript
{
    <script type="text/javascript" src="@Url.Content("/Scripts/user.story.script.js")"></script>
}

<h2>User Story</h2>
<form method="post" id="UserStoryForm">
    <div class="form-group">
        <label for="user-story-name">Name</label>
        <input type="text" name="name" class="form-control" id="UserStoryName" required />
    </div>
    <div class="form-group">
        <label for="user-story-description">Description</label>
        <textarea name="description" class="form-control" id="UserStoryDescription" rows="8" required></textarea>
    </div>
    <input type="submit" class="btn btn-default" value="Create" />
</form>